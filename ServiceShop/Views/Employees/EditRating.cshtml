@model ServiceShop.Models.Employee

@{
    ViewBag.Title = "EditRating";
}

<center><h2>Please rate from 1 - 5</h2><br/></center>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Employee: @Model.Name</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.Name)
    @Html.HiddenFor(model => model.Email)
    @Html.HiddenFor(model => model.ApplicationUserId)
    @Html.HiddenFor(model => model.RatingData)
    @Html.HiddenFor(model => model.Rating)
    <div class="form-group">
        @Html.LabelFor(model => model.RateTemp, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @*@Html.EditorFor(model => model.Rating, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Rating, "", new { @class = "text-danger" })*@

            <label class="text-light">1</label>
            @Html.RadioButtonFor(m => m.RateTemp, "1")
            <label class="text-light">2</label>
            @Html.RadioButtonFor(m => m.RateTemp, "2")
            <label class="text-light">3</label>
            @Html.RadioButtonFor(m => m.RateTemp, "3")
            <label class="text-light">4</label>
            @Html.RadioButtonFor(m => m.RateTemp, "4")
            <label class="text-light">5</label>
            @Html.RadioButtonFor(m => m.RateTemp, "5")

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
